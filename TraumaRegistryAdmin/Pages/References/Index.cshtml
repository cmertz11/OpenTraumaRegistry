@page
@model TraumaRegistryAdmin.Pages.References.IndexModel

<h3>Reference Data</h3>
 

 
<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reference[0].Name)
            </th>
            <th style="text-align: right">
                <a asp-page="Create" class="btn btn-primary">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Reference) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td style="text-align: right">
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="../ReferenceDetails/Index" asp-route-ReferenceId="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
