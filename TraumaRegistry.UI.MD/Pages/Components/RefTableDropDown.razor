
    <MatSelect Label="@labelText" @bind-Value="Id" @onchange="selectedIdChanged">

        @if (refTable.TableData != null)
        {
            <MatOption TValue="int" Value=0 ></MatOption>
            @foreach (var item in refTable.TableData)
            {
                if (item.Id == Id)
                {
                    <MatOption TValue="int" Value=@item.Id selected>@item.Description</MatOption>
                }
                else
                {
                    <MatOption TValue="int" Value=@item.Id>@item.Description</MatOption>
                }
            }
        }
    </MatSelect>

        @code {
            [Parameter]
            public string labelText { get; set; }
            [Parameter]
            public int Id {get; set;}
            [Parameter]
            public RefTableDTO refTable { get; set; }
            [Parameter]
            public EventCallback<int> IdChanged { get; set; }

            void selectedIdChanged(ChangeEventArgs e)
            {
                IdChanged.InvokeAsync(Convert.ToInt32(e.Value));
            }
        }
