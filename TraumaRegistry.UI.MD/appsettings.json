{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "EmailSettings": {
    "Provider": "SENDGRID",
    "HostName": "CONFIGURE IN secrets.json",
    "ApiKey": "CONFIGURE IN secrets.json",
    "EmailConfirmationTemplate": "\\EmailTemplates\\EmailConfirmation.html",
    "TempPasswordTemplate": "\\EmailTemplates\\TempPassword.html",
    "SystemEmailAddress": "CONFIGURE IN secrets.json"
  },
  "SecuritySettings": {
    "AESKEY":  "CONFIGURE IN secrets.json"
  }

}
